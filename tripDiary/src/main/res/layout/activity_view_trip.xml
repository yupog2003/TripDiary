<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewTripActivity" >

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar" >

        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </FrameLayout>

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#DDFFFFFF"
            android:orientation="vertical" >

            <Button
                android:id="@+id/map"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/btn_view_selector"
                android:drawableLeft="@drawable/ic_map"
                android:drawableStart="@drawable/ic_map"
                android:text="@string/map" />

            <Button
                android:id="@+id/diary"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/btn_view_selector"
                android:drawableLeft="@drawable/ic_taketext"
                android:drawableStart="@drawable/ic_taketext"
                android:text="@string/diary" />

            <Button
                android:id="@+id/photo"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/btn_view_selector"
                android:drawableLeft="@drawable/ic_picture"
                android:drawableStart="@drawable/ic_picture"
                android:text="@string/photo" />

            <Button
                android:id="@+id/video"
                 android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/btn_view_selector"
                android:drawableLeft="@drawable/ic_takevideo"
                android:drawableStart="@drawable/ic_takevideo"
                android:text="@string/video" />

            <Button
                android:id="@+id/audio"
                 android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/btn_view_selector"
                android:drawableLeft="@drawable/ic_takeaudio"
                android:drawableStart="@drawable/ic_takeaudio"
                android:text="@string/sound" />

            <Button
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/btn_view_selector"
                android:drawableLeft="@drawable/ic_money"
                android:drawableStart="@drawable/ic_money"
                android:text="@string/cost" />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dip"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/actionbar_shadow"
        android:rotation="180" >
    </View>

</RelativeLayout>